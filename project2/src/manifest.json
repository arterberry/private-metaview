{
    "manifest_version": 3,
    "name": "VIDINFRA HLS MetaPlayer",
    "version": "1.1",
    "description": "Plays .m3u8 URLs directly via content script and provides a side panel.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_title": "Open VIDINFRA MetaPlayer Panel",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"],
            "run_at": "document_start"
        }
    ],
    
    "web_accessible_resources": [
        {
            "resources": ["js/hls.min.js", "player.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
            "id": "hlsRedirectRules",
            "enabled": true,
            "path": "rules.json"
            }
        ]
    }
}